{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": ["dom", "es5", "scripthost", "esnext"],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "tests/**/*.ts",
    "/tests/**/*.ts"
  ]
}
